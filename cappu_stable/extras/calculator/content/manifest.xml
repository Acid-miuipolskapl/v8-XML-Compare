			<Trigger action="up">
			    <VariableCommand name="equation" expression="ifelse(#finish_eval,'0', eqs(@equation,'0'),'0', strMatches(@equation,'.*[\\+*/-]0$'), substr(@equation,0,len(@equation)-1)+'0', @equation+'0')" type="string"/>
