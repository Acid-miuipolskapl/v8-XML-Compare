		</Pressed>
		<Triggers>
			<Trigger action="up">
				<VariableCommand name="equation" expression="ifelse(#finish_eval,'8', eqs(@equation,'0'),'8', strMatches(@equation,'.*[\\+*/-]0$'), substr(@equation,0,len(@equation)-1)+'8', @equation+'8')" type="string"/>
