		</Pressed>
		<Triggers>
			<Trigger action="up">
			    <!-- take care: '-' can't be in middle -->
				<VariableCommand name="equation" expression="ifelse(strEndsWith(@equation,'.'),@equation, strMatches(@equation,'.*[\\+*/-]$'), substr(@equation,0,len(@equation)-1)+'+', @equation+'+')" type="string"/>
